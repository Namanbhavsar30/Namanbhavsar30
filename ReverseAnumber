import java.util.Scanner;

public class ReverseNum {
    public static void main(String[] args) {

        Scanner sc =new Scanner(System.in);
        System.out.println("enter a number: ");
        int num= sc.nextInt();
        int temp=num;
        int rev=0;
        while (temp!=0){
            int rem= temp%10;
            rev= rev * 10 +rem;
            temp=temp/10;
        }

        System.out.println("the reverse of "+num+" is "+rev);
    }
}


